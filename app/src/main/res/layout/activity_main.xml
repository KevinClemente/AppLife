<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elsalvador.taller.MainActivity">

    <TableRow>

        <LinearLayout android:layout_weight="1">

            <View
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:background="#FFF" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_marginBottom="-10dp"
        android:layout_weight="1">

        <LinearLayout>

            <View
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:background="#00796B"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="@string/settings"
                android:textColor="#FFF" />


        </LinearLayout>

        <LinearLayout>

            <View
                android:layout_width="12dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#FFF" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:background="#2E7D32"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/perfil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="@string/profile"
                android:textColor="#FFF" />

        </LinearLayout>

        <View
            android:layout_width="12dp"
            android:layout_height="150dp"

            android:background="#FFF" />


    </TableRow>


    <TableRow
        android:layout_height="156dp"
        android:layout_marginBottom="-10dp"
        android:layout_weight="1">

        <LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:background="#002884"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/favoritos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="@string/fav"
                android:textColor="#FFF" />


        </LinearLayout>

        <LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#FFF" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:background="#7C42BB"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:src="@mipmap/ingresos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/income"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#FFF" />

        </LinearLayout>


    </TableRow>


    <TableRow
        android:layout_marginBottom="-10dp"
        android:layout_weight="1">

        <LinearLayout>

            <View
                android:layout_width="7dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#FFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:background="#E57373"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@mipmap/pres" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="@string/t"
                android:textColor="#FFF" />


        </LinearLayout>

        <LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#FFF" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:background="#AB1357"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:src="@mipmap/tarjeta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="@string/exit"
                android:textColor="#FFF" />

        </LinearLayout>

        <LinearLayout>

            <View
                android:layout_width="8dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#FFF" />

        </LinearLayout>


    </TableRow>


</TableLayout>
